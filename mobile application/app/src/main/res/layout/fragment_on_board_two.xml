<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard_2"
    tools:context=".fragments.onboard.OnBoardFragmentTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12sp"
        android:orientation="vertical"
        android:gravity="bottom"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/on_board_two_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/abel"
            android:text="@string/what_s_wrong_with_your_crops" />

        <TextView
            android:id="@+id/on_board_two_dtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"
            android:textColor="@color/white"
            android:gravity="bottom"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/abel"
            android:text="@string/get_more_knowladge_about_diseases_affected_to_your_crops_to_much_more_effective_disease_control" />

        <ImageButton
            android:id="@+id/nextScreen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_planter_arrow"
            android:backgroundTint="#00494747"
            android:layout_gravity="end"/>

    </LinearLayout>

</FrameLayout>