<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard_4"
    tools:context=".fragments.onboard.OnBoardFragmentFour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12sp"
        android:orientation="vertical"
        android:gravity="bottom"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/on_board_four_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/abel"
            android:text="@string/harvest_at_the_right_time" />

        <TextView
            android:id="@+id/on_board_four_dtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"
            android:textColor="@color/white"
            android:gravity="bottom"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/abel"
            android:text="@string/without_damaging_to_plants_harvest_at_the_right_time" />

        <ImageButton
            android:id="@+id/nextScreen4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_planter_arrow"
            android:backgroundTint="#00494747"
            android:layout_gravity="end"/>

    </LinearLayout>

</FrameLayout>